<h1>Add a new order to @Model.Name</h1>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id = "vendorId" name = "vendorId" type="hidden" value="@Model.Id">
  <label for="orderDate">Order Date</label>
  <input id="orderDate" name="orderDate" type="date">  
  <label for="orderAmount">Amount</label>
  <input id="orderAmount" pattern="(\d*)([\.])(\d{2})" name="orderAmount" type="text">
  <label for="orderSummary">Brief Summary</label>
  <input id="orderSummary" name="orderSummary" type="text">
  <label for="orderDescription">Detailed Description</label>
  <input id="orderDescription" name="orderDescription" type="text">
  <button type="submit">Add Order</button>
</form>